@model IEnumerable<Recrutement.Models.Application>

@{
    ViewData["Title"] = "Aministration | List of Applications";
}

<h1>Applications List</h1>

<table class="ui compact celled definition table">
    <thead class="full-width">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-mail address</th>
            <th>Phone Number</th>
            <th>Education Level</th>
            <th>Number Of Years Of Experience</th>
            <th>Last Employer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.educationLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.yearsOfExperience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastEmployer)
            </td>
            <td class="collapsing">
                <a asp-action="ApplicationDetails" asp-route-id="@item.id" class="ui" style="text-decoration: none"><i class="large icon folder open"></i></a>      
            </td>
        </tr>
     }
    </tbody>
</table>